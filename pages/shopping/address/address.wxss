page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.container{
  height: 100%;
  width: 100%;
}

.address-list{
    background: #f4f4f4;
    margin-top: 5rpx;
    margin-bottom: 105rpx;
}

.address-list .item{
    padding-left: 20rpx;
    height: 143rpx;
    width: auto;
    display: flex;
    align-items: center;
    background: #ffffff;
    margin-bottom: 5rpx;
}

.address-list .infobox{
    width: 650rpx;
    height: 140rpx;
    display: block;
    overflow: hidden;
}

.address-list .namebox{
    width: 600rpx;
    height: 35rpx;
    font-size: 30rpx;
    color: #333;
    overflow: ellipsis;
    margin-top: 20rpx;
    margin-bottom: 12rpx;
}

.address-list .name{
    width: 580rpx;
    height: 35rpx;
    font-size: 32rpx;
    color: #333;
    text-overflow: ellipsis;
}

.address-list .addressbox{
    width: 580rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
    color: #666;
    font-size: 24rpx;
    line-height: 32rpx;
    
}

.address-list .address{
    height: 80rpx;
    font-size: 24rpx;
    line-height: 36rpx;
    color: #666;
    text-overflow:ellipsis;
    word-wrap:break-word
}

.address-list .isdefault{
    height: 80rpx;
    font-size: 23rpx;
    line-height: 36rpx;
    color: #666;
    text-overflow:ellipsis;
    word-wrap:break-word
}

.address-list .content{
    height: 80rpx;
    font-size: 24rpx;
    line-height: 36rpx;
    color: #666;
    text-overflow:ellipsis;
    word-wrap:break-word
}


.address-list .c{
    height: 100rpx;
    overflow: hidden;
}

.address-list .mobile{

    height: 29rpx;
    font-size: 29rpx;
    line-height: 29rpx;
    overflow: hidden;
    color: #333;
    margin-bottom: 6.25rpx;
}

.address-list .r{
    width: 72rpx;
    height: 36rpx;
    overflow: hidden;
    margin-right: 16.5rpx;
}

.edit {
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.address-list .del{
    display: block;
    width: 52rpx;
    height: 52rpx;
}

.add-address{
    background: #b4282d;
    text-align: center;
    width: 100%;
    height: 99rpx;
    line-height: 99rpx;
    position: fixed;
    border-radius: 0;
    border: none;
    color: #fff;
    font-size: 29rpx;
    bottom: 0;
    left:0;
}

.empty-view{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-view .icon{
  height: 248rpx;
  width: 258rpx;
  margin-bottom: 10rpx;
}

.empty-view .text{
  width: auto;
  font-size: 28rpx;
  line-height: 35rpx;
  color: #999;
}